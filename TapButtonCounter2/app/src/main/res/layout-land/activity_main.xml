<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cornez.tapbuttoncounter.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="inc"
        android:id="@+id/inc"
        android:layout_marginBottom="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dec"
        android:id="@+id/dec"
        android:layout_alignTop="@+id/inc"
        android:layout_toRightOf="@+id/inc"
        android:layout_toEndOf="@+id/inc"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="comp"
        android:id="@+id/comp"
        android:layout_alignTop="@+id/dec"
        android:layout_toRightOf="@+id/dec"
        android:layout_toEndOf="@+id/dec"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reset"
        android:id="@+id/reset"
        android:layout_alignTop="@+id/comp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="36dp"
        android:layout_marginEnd="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Factorial of"
        android:id="@+id/Factorial"
        android:layout_marginTop="51dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/dec"
        android:layout_alignStart="@+id/dec" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/sum"
        android:text="  "
        android:layout_alignBaseline="@+id/as"
        android:layout_alignBottom="@+id/as"
        android:layout_toLeftOf="@+id/reset"
        android:layout_toStartOf="@+id/reset"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="="
        android:id="@+id/as"
        android:layout_alignBaseline="@+id/num"
        android:layout_alignBottom="@+id/num"
        android:layout_alignRight="@+id/comp"
        android:layout_alignEnd="@+id/comp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/num"
        android:layout_alignBaseline="@+id/Factorial"
        android:layout_alignBottom="@+id/Factorial"
        android:layout_alignLeft="@+id/comp"
        android:layout_alignStart="@+id/comp"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp" />

</RelativeLayout>
